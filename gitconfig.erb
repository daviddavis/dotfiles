[diff]
  #external = /usr/bin/opendiff
[alias]
  st = status
  s = status
  ci = commit
  c = commit
  cam = commit -a -m
  b = branch
  co = checkout
  cm = commit -m
  su = submodule foreach git pull
  pull-all = "!f() { branches=`git branch`; for b in ${branches//'*'/}; do git checkout $b; git pull origin $b; done }; f"
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	quotepath = false
	autocrlf = input
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
